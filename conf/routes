# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /api/products                     controllers.api.ProductsController.list
GET     /api/products/:id                 controllers.api.ProductsController.show(id: Long)
POST    /api/products/:id/favorite        controllers.api.ProductsController.favoriteProduct(id: Long)
DELETE  /api/products/:id/favorite        controllers.api.ProductsController.unfavoriteProduct(id: Long)

POST    /api/users/login                  controllers.api.UsersController.login

GET     /products                         controllers.web.ProductsController.list
GET     /products/:id                     controllers.web.ProductsController.show(id: Long)
GET     /                                 controllers.web.ProductsController.list

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)
GET     /*file                            controllers.Assets.at(path="/public", file)
